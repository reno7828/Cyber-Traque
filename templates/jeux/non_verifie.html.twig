{% extends 'base.html.twig' %}

{% block title %}Vérification de l'e-mail{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">{{ 'Vérification de l\'e-mail'|trans }}</div>

                <div class="card-body">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        {% if app.user.isVerified == 0 %}
                            <div class="alert alert-warning">
                                Veuillez vérifier votre adresse e-mail pour accéder à cette fonctionnalité. 
                                
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="alert alert-danger">
                            Vous devez être connecté pour accéder à cette fonctionnalité. 
                            <a href="{{ path('app_login') }}">Cliquez ici pour vous connecter.</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
